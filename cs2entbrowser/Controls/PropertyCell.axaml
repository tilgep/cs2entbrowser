<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:ctrls="clr-namespace:cs2entbrowser.Controls"
             x:Class="cs2entbrowser.Controls.PropertyCell"
             x:DataType="ctrls:PropertyCell">
  <Panel Name="topPanel" HorizontalAlignment="Stretch" DoubleTapped="DoubleClicked">
    <Panel.ContextMenu>
      <ContextMenu>
        <MenuItem Header="Copy" Click="Copy_Click" />
        <MenuItem Header="Search for..." Click="Search_Click" />
        <MenuItem Header="Jump to..." Click="Jump_Click" />
      </ContextMenu>
    </Panel.ContextMenu>
    <TextBox Text="{Binding $parent[ctrls:PropertyCell].Text, Mode=TwoWay}" IsReadOnly="True" CornerRadius="0">
      <TextBox.ContextMenu>
        <ContextMenu>
          <MenuItem Header="Copy" Click="Copy_Click" />
          <MenuItem Header="Search for..." Click="Search_Click" />
          <MenuItem Header="Jump to..." Click="Jump_Click" />
        </ContextMenu>
      </TextBox.ContextMenu>
    </TextBox>
  </Panel>
</UserControl>
